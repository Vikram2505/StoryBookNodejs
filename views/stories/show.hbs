<div class="row">
    <div class="col s12 m8">
        <h4>{{story.title}}
            <small>{{{editIcon story.user user story._id false}}}</small>
        </h4>
        <div class="card story">
            <div class="card-content">
                <span class="card-title">
                    {{formatDate date 'MMMM Do YYYY'}}
                </span>
                {{{story.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">
                    {{user.displayName}}
                </span>
                <img src="{{user.image}}" class="circle responsive-img img-small" alt="">
            </div>
            <div class="card-action">
                <a href="/stories/user/{{user._id}}">More From {{user.firstName}}</a>
            </div>
        </div>
    </div>
</div>